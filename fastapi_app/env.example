# Database Configuration
DATABASE_URL=postgresql://deelflowai_user:deelflowai_password@localhost:5432/deelflowai
DJANGO_DATABASE_URL=postgresql://deelflowai_user:deelflowai_password@localhost:5432/deelflowai

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:5173", "https://deelflowai.com"]

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Logging
LOG_LEVEL=INFO
